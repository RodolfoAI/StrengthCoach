<Window x:Class="StrengthCoach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StrengthCoach"
        xmlns:userControls="clr-namespace:StrengthCoach.View.UserControls"
        mc:Ignorable="d" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="MainWindow" Height="600" Width="900" Background="#333333"
        Loaded="Window_Loaded">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="Resources/Images/rampla_logo.jpg"
           Stretch="UniformToFill" 
           Opacity="0.05" 
           Grid.RowSpan="2"
           Panel.ZIndex="-1"/>
        
        <userControls:WindowHeader Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--Left side (Measure strenght and student control-->

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--Measure strenght-->
                <Border BorderThickness="2" BorderBrush="#444444" Margin="2">
                    <StackPanel Grid.Row="0" Orientation="Vertical">
                        <!--Title-->
                        <Border CornerRadius="5" Margin="10,5,10,0" BorderThickness="1" BorderBrush="Black">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                    <GradientStop Color="#3b2029" Offset="0.0"/>
                                    <GradientStop Color="#291e21" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="Medir fuerza" HorizontalAlignment="Center" Foreground="White" 
                                       FontWeight="Bold" Padding="5" FontSize="20"/>
                        </Border>
                        <!--Display strenght-->
                        <Border CornerRadius="5" Margin="10,10,10,0" BorderThickness="1" BorderBrush="Black" Background="#444444">
                            <TextBlock HorizontalAlignment="Center" Foreground="White" Text="Fuerza generada: 0"
                                       FontWeight="Bold" Padding="5" FontSize="18" x:Name="punchScoreText"/>
                        </Border>

                        <!--Select student-->
                        <Border Width="auto" CornerRadius="5" Margin="10,10,10,0" BorderThickness="1" BorderBrush="Black" Background="#444444">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Seleccionar estudiante" Margin="0,5,0,5"  Foreground="White" 
                                       FontWeight="Bold" Padding="5" FontSize="15"/>
                                <ComboBox x:Name="studentComboBox" Margin="10,5,5,5" Width="150" ItemsSource="{Binding Students}" FontSize="15"/>
                            </StackPanel>
                        </Border>

                        <!--Select COM Port-->
                        <Border Width="auto" CornerRadius="5" Margin="10,10,10,0" BorderThickness="1" BorderBrush="Black" Background="#444444">
       <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
 <TextBlock Text="Puerto COM" Margin="0,5,0,5"  Foreground="White" 
      FontWeight="Bold" Padding="5" FontSize="15"/>
<ComboBox x:Name="comPortComboBox" Margin="10,5,5,5" Width="100" FontSize="15"/>
         <Button x:Name="refreshPortsButton" Content="🔄" Click="RefreshComPorts_Click"
   Background="#444444" Foreground="White" Padding="5" Margin="5,5,5,5"
        FontSize="15" BorderThickness="1" BorderBrush="Black" Width="35" Height="35"
         ToolTip="Actualizar puertos COM"/>
    </StackPanel>
  </Border>

                        <!--Start and register punch-->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <userControls:StartButton x:Name="startButton" ButtonContent="Iniciar" Margin="10,5,5,5"/>
                            <userControls:SaveButton ButtonContent="Guardar" Margin="10,5,5,5"/>
                            <userControls:DeleteButton ButtonContent="Eliminar" Margin="10,5,5,5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--Student control-->
                <Border Grid.Row="1" BorderThickness="2" BorderBrush="#444444" Margin="2">
                    <StackPanel Orientation="Vertical">
                        <!--Title-->
                        <Border CornerRadius="5" Margin="10,5,10,0" BorderThickness="1" BorderBrush="Black">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                    <GradientStop Color="#0c4724" Offset="0.0"/>
                                    <GradientStop Color="#2e2d2d" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="Registrar estudiante" HorizontalAlignment="Center" Foreground="White" 
                                FontWeight="Bold" Padding="5" FontSize="20"/>
                        </Border>

                        <!--Student name-->
                        <Border CornerRadius="5" Margin="10,10,10,0" BorderThickness="2" BorderBrush="Black" Background="#444444">
                            <userControls:DataEntry Placeholder="Nombre" x:Name="studentNameEntry"/>
                        </Border>

                        <!--Student age-->
                        <Border CornerRadius="5" Margin="10,10,10,0" BorderThickness="2" BorderBrush="Black" Background="#444444">
                            <userControls:DataEntry Placeholder="Edad" x:Name="studentAgeEntry" />
                        </Border>

                        <!--Register-->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <userControls:RegisterButton ButtonContent="Registrar" Margin="100,10,100,5"/>
                        </StackPanel>

                    </StackPanel>
                </Border>
            </Grid>

            <!--Right side (Strength ranking)-->
            <Grid Grid.Column="1">
                <!--Ranking Chart-->
                <Border Grid.Row="1" BorderThickness="2" BorderBrush="#444444" Margin="2">
                    <StackPanel Orientation="Vertical">
                        <!--Title-->
                        <Border CornerRadius="5" Margin="10,5,10,0" BorderThickness="1" BorderBrush="Black">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                    <GradientStop Color="#1a3a52" Offset="0.0"/>
                                    <GradientStop Color="#2e2d2d" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="Rankings" HorizontalAlignment="Center" Foreground="White" 
                                FontWeight="Bold" Padding="5" FontSize="20"/>
                        </Border>

                        <!--DataGrid for ranking-->
                        <DataGrid ItemsSource="{Binding StudentRanking}" AutoGenerateColumns="False" 
                                  Margin="10,10,10,10" Background="#444444" Foreground="White"
                                  GridLinesVisibility="None" RowBackground="#555555" 
                                  AlternatingRowBackground="#474747" HeadersVisibility="Column">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#444444"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*" 
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Fuerza (kg)" Binding="{Binding HitForce}" 
                                                    Width="*" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="16"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Fecha" Binding="{Binding Date, StringFormat='dd/MM/yyyy'}" 
                                                    Width="*" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <!--Category Filter Buttons-->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,5,10,5">
                            <Button x:Name="GeneralButton" Content="General" Click="RankingCategory_Click"
                                Background="#1a3a52" Foreground="White" Padding="10,5" Margin="2"
                                FontSize="12" FontWeight="Bold" BorderThickness="1" BorderBrush="Black"
                                Width="auto" Cursor="Hand"/>
                            <Button x:Name="KidsButton" Content="Niños (1-7)" Click="RankingCategory_Click"
                                Background="#444444" Foreground="White" Padding="10,5" Margin="2"
                                FontSize="12" FontWeight="Bold" BorderThickness="1" BorderBrush="Black"
                                Width="auto" Cursor="Hand"/>
                            <Button x:Name="SuperKidsButton" Content="Super Niños (9-11)" Click="RankingCategory_Click"
                                Background="#444444" Foreground="White" Padding="10,5" Margin="2"
                                FontSize="12" FontWeight="Bold" BorderThickness="1" BorderBrush="Black"
                                Width="auto" Cursor="Hand"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,5,10,5">
                            <Button x:Name="TeenagersButton" Content="Adolescentes (12-15)" Click="RankingCategory_Click"
                                Background="#444444" Foreground="White" Padding="10,5" Margin="2"
                                FontSize="12" FontWeight="Bold" BorderThickness="1" BorderBrush="Black"
                                Width="auto" Cursor="Hand"/>
                            <Button x:Name="AdultsButton" Content="Abierto (15+)" Click="RankingCategory_Click"
                                Background="#444444" Foreground="White" Padding="10,5" Margin="2"
                                FontSize="12" FontWeight="Bold" BorderThickness="1" BorderBrush="Black"
                                Width="auto" Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
