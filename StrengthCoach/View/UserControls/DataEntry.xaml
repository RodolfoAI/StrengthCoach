<UserControl x:Class="StrengthCoach.View.UserControls.DataEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrengthCoach.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid Background="White">
        <TextBox Name="txtBox" VerticalContentAlignment="Center"
             FontSize="16" TextChanged="TextBox_TextChanged" Background="Transparent"
             FontWeight="Light"/>
        <TextBlock Name="txtBlock"  VerticalAlignment="Center" Margin="5,0,0,0" Foreground="DarkGray"
            FontWeight="Light" Panel.ZIndex="-1" Text="{Binding Placeholder}"/>
        <Button Width="40" HorizontalAlignment="Right" Content="X" Background="Transparent" 
            Foreground="LightGray" BorderThickness="0" Click="Button_Click"/>
    </Grid>
</UserControl>
