<UserControl x:Class="StrengthCoach.View.UserControls.SaveButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrengthCoach.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Button Name="customButton" BorderThickness="1" BorderBrush="black" Content="{Binding ButtonContent, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold"
        Background="#444444" Click="Button_Click" FontSize="15" Padding="9" Height="40" Foreground="White"/>
</UserControl>
