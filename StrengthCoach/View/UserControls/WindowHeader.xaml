<UserControl x:Class="StrengthCoach.View.UserControls.WindowHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrengthCoach.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Border Background="#444444">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Background="Transparent">
        <Button Name="btnMinimize" Content="—" Width="50" Height="30" Foreground="White"
                BorderBrush="Transparent" Background="Transparent" Click="btnMinimize_Click"/>
        <Button Name="btnMaximize" Content="🗖" Width="50" Height="30" Foreground="White"
                BorderBrush="Transparent" Background="Transparent" Click="btnMaximize_Click"/>
        <Button Name="btnClose" Content="⛌" Width="50" Height="30" Foreground="White"
                BorderBrush="Transparent" Background="Transparent" Click="btnClose_Click"/>
    </StackPanel>
    </Border>
</UserControl>
